#include <iostream>
#include <windows.h>
#include <cstdlib>
#include <stdio.h>
#include <stdlib.h>
#include <vector> 
#include <string>
#include <algorithm>
#include <ctime>
#include <random>
#include <sstream>

using namespace std;

// Struttura mydata per creare le carte
struct mydata {
    int value;    
    string segno; 
};

// Funzione per calcolare i punti di Briscola
int puntiDaValore(int v) {
    if (v == 1) return 11;
    if (v == 3) return 10;
    if (v == 10) return 4;
    if (v == 9) return 3;
    if (v == 8) return 2;
    return 0;
}

/*############################################################################################################*/
string inserisciNumero(const string &ascii, int numero) {
    string risultato;
    string num;

    if (numero == 10)
        num = "10";   // <-- qui i caratteri speciali
    else
        num = to_string(numero);


    // Copia riga per riga e sostituisce {NUM}
    int pos = 0, start = 0;
    while ((pos = ascii.find("{NUM}", start)) != string::npos) {
        risultato += ascii.substr(start, pos - start);
        risultato += num; 
        start = pos + 5; // lunghezza "{NUM}"
    }
    risultato += ascii.substr(start);
    return risultato;
}
/*############################################################################################################*/
vector<string> splitRighe(const string &ascii) {
    vector<string> righe;
    string r;
    stringstream ss(ascii);
    while (getline(ss, r)) righe.push_back(r);
    return righe;
}

void stampaManoAffiancata(const vector<mydata> &mano,
                          const string &cartaCoppe,
                          const string &cartaBastoni,
                          const string &cartaSpade,
                          const string &cartaDenari)
{
    vector<vector<string>> blocchi;

    for (auto &c : mano) {
        string art;

        string s = c.segno;
        for (auto &ch : s) ch = tolower(ch);

        if (s == "coppe") art = cartaCoppe;
        else if (s == "bastoni") art = cartaBastoni;
        else if (s == "spade") art = cartaSpade;
        else if (s == "denari") art = cartaDenari;

        art = inserisciNumero(art, c.value);

        blocchi.push_back(splitRighe(art));
    }

    int righe = blocchi[0].size();

    for (int r = 0; r < righe; r++) {
        for (int i = 0; i < blocchi.size(); i++) {
            cout << blocchi[i][r] << "   ";
        }
        cout <<endl;
    }
}

/*############################################################################################################*/
void stampaCarta(const mydata &c, 
                 const string &cartaCoppe, 
                 const string &cartaBastoni,
                 const string &cartaSpade,
                 const string &cartaDenari)
{
    string s = c.segno;
    for (auto &ch : s) ch = tolower(ch);

    string art;

    if (s == "coppe") art = cartaCoppe;
    else if (s == "bastoni") art = cartaBastoni;
    else if (s == "spade") art = cartaSpade;
    else if (s == "denari") art = cartaDenari;

    // Inserisce il numero dentro l'ASCII art
    art = inserisciNumero(art, c.value);

    cout << art << endl;
}


/*############################################################################################################*/

int scegliScartinaBot(const vector<mydata>& mano) {
    int indice = 0;
    int minPunti = 100;

    for (int i = 0; i < mano.size(); i++) {
        int p = puntiDaValore(mano[i].value);
        if (p < minPunti) {
            minPunti = p;
            indice = i;
        }
    }
    return indice;
}

/*############################################################################################################*/

int scegliRispostaBot(const vector<mydata>& mano, const mydata& cartaPrima, const string& BRISCOLA) {

    for (int i = 0; i < mano.size(); i++) {
        if (mano[i].segno == cartaPrima.segno &&
            puntiDaValore(mano[i].value) > puntiDaValore(cartaPrima.value))
            return i;

        if (mano[i].segno == BRISCOLA && cartaPrima.segno != BRISCOLA)
            return i;
    }

    return scegliScartinaBot(mano);
}

/*############################################################################################################*/

vector<mydata> generaMazzo() {
    vector<mydata> mazzo;
    
    srand(time(NULL));

    for(int a = 1; a <= 10; a++) mazzo.push_back({a, "Denari"});
    for(int a = 1; a <= 10; a++) mazzo.push_back({a, "Bastoni"});
    for(int a = 1; a <= 10; a++) mazzo.push_back({a, "Spade"});
    for(int a = 1; a <= 10; a++) mazzo.push_back({a, "Coppe"});

    random_device rd;
    mt19937 g(rand()%1000);
    shuffle(mazzo.begin(), mazzo.end(), g);

    return mazzo;
}
/*############################################################################################################*/

int unocontrounomedio(const string &cartaCoppe, const string &cartaBastoni,
                      const string &cartaSpade, const string &cartaDenari){
 
    srand(time(NULL));
    setlocale(LC_ALL, "ita");
    
    int puntisq2 = 0;
    int puntisq1 = 0;
    
    vector<mydata> mazzo = generaMazzo();

    vector<mydata> mano1, mano2;
    for (int i = 0; i < 3; ++i) {
        mano1.push_back(mazzo.back()); mazzo.pop_back();
        mano2.push_back(mazzo.back()); mazzo.pop_back();
    }

    string BRISCOLA = " ";
    if (!mazzo.empty()) BRISCOLA = mazzo.back().segno;
    cout << "BRISCOLA : " << BRISCOLA << endl;

    string primo_giocatore = "squadra1";

    while (!mano1.empty() && !mano2.empty()) {
        cout << "\n--- Nuova mano ---\n";
        cout << "Primo a giocare: " << primo_giocatore << " la BRISCOLA è : " << BRISCOLA << endl;

        cout << "La tua mano:\n";
        stampaManoAffiancata(mano1, cartaCoppe, cartaBastoni, cartaSpade, cartaDenari);


        mydata cartaPrima, cartaSeconda;
        bool primoagiocare = (primo_giocatore == "squadra1");

        if (primoagiocare) {
            int indice_carta;
            do {
                cout << "Scegli che carta giocare (indice): " << endl; 
                cin >> indice_carta;
            } while (indice_carta < 0 || indice_carta >= (int)mano1.size());
            
            cartaPrima = mano1[indice_carta];
            mano1.erase(mano1.begin() + indice_carta);

            int indice_cartabot = scegliRispostaBot(mano2, cartaPrima, BRISCOLA);
            cartaSeconda = mano2[indice_cartabot];
            mano2.erase(mano2.begin() + indice_cartabot);
            cout << "Il bot risponde con: "; 
            stampaCarta(cartaSeconda, cartaCoppe, cartaBastoni, cartaSpade, cartaDenari); 
            cout << " che vale " << puntiDaValore(cartaSeconda.value) << " punti " << endl;
        } 
        else {
            int indice_cartabot = scegliScartinaBot(mano2);
            cartaPrima = mano2[indice_cartabot];
            mano2.erase(mano2.begin() + indice_cartabot);
            cout << "Il bot gioca: \n"; 
            stampaCarta(cartaPrima, cartaCoppe, cartaBastoni, cartaSpade, cartaDenari); 
            cout << " che vale " << puntiDaValore(cartaPrima.value) << " punti " << endl;

            int indice_carta;
            do {
                cout << "Scegli che carta giocare in risposta (indice): " << endl;
                cin >> indice_carta;
            } while (indice_carta < 0 || indice_carta >= (int)mano1.size());
            
            cartaSeconda = mano1[indice_carta];
            mano1.erase(mano1.begin() + indice_carta);
        }

        bool primabriscola = (cartaPrima.segno == BRISCOLA);
        bool secondabriscola = (cartaSeconda.segno == BRISCOLA);
        int puntiPrima = puntiDaValore(cartaPrima.value);
        int puntiSeconda = puntiDaValore(cartaSeconda.value);

        string vincitore;
        
        if (cartaPrima.segno == cartaSeconda.segno) {
            if (puntiSeconda > puntiPrima) {
                vincitore = primoagiocare ? "squadra2" : "squadra1";
            } else {
                vincitore = primo_giocatore;
            }
        } else {
            if (primabriscola && !secondabriscola) {
                vincitore = primo_giocatore;
            } else if (!primabriscola && secondabriscola) {
                if (puntiSeconda > puntiPrima) {
                    vincitore = primoagiocare ? "squadra2" : "squadra1";
                } else {
                    vincitore = primo_giocatore;
                }
            } else {
                vincitore = primo_giocatore;
            }
        }

        int puntiMano = puntiPrima + puntiSeconda;
        if (vincitore == "squadra2") {
            puntisq2 += puntiMano;
            cout << "La mano è vinta dalla SQUADRA 2 (BOT). Punti: " << puntiMano << endl;
        } else {
            puntisq1 += puntiMano;
            cout << "La mano è vinta dalla SQUADRA 1 (TU). Punti: " << puntiMano << endl;
        }

        if (!mazzo.empty()) {
            if (vincitore == "squadra1") {
                mano1.push_back(mazzo.back()); mazzo.pop_back();
                if (!mazzo.empty()) { mano2.push_back(mazzo.back()); mazzo.pop_back(); }
            } else {
                mano2.push_back(mazzo.back()); mazzo.pop_back();
                if (!mazzo.empty()) { mano1.push_back(mazzo.back()); mazzo.pop_back(); }
            }
        }

        primo_giocatore = vincitore;
        cout << "Punteggio attuale = Squadra1: " << puntisq1 << " e Squadra2: " << puntisq2 << endl;
    }

    cout << "Partita terminata. Punteggio finale = Squadra1: " << puntisq1 << " e Squadra2: " << puntisq2 << endl;
    return 0;
}

/*############################################################################################################*/

int unocontrounofacile(const string &cartaCoppe, const string &cartaBastoni,
                       const string &cartaSpade, const string &cartaDenari){
 
    srand(time(NULL));
    setlocale(LC_ALL, "ita");
    
    int puntisq2 = 0;
    int puntisq1 = 0;
    
    vector<mydata> mazzo = generaMazzo();

    vector<mydata> mano1, mano2;
    for (int i = 0; i < 3; ++i) {
        mano1.push_back(mazzo.back()); mazzo.pop_back();
        mano2.push_back(mazzo.back()); mazzo.pop_back();
    }

    string BRISCOLA = " ";
    if (!mazzo.empty()) BRISCOLA = mazzo.back().segno;
    cout << "BRISCOLA : " << BRISCOLA << endl;

    string primo_giocatore = "squadra1";

    while (!mano1.empty() && !mano2.empty()) {
        cout << "\n--- Nuova mano ---\n";
        cout << "Primo a giocare: " << primo_giocatore << " la BRISCOLA è : " << BRISCOLA << endl;

        cout << "La tua mano:\n";
        stampaManoAffiancata(mano1, cartaCoppe, cartaBastoni, cartaSpade, cartaDenari);


        mydata cartaPrima, cartaSeconda;
        bool primoagiocare = (primo_giocatore == "squadra1");

        if (primoagiocare) {
            int indice_carta;
            do {
                cout << "Scegli che carta giocare (indice): " << endl; 
                cin >> indice_carta;
            } while (indice_carta < 0 || indice_carta >= (int)mano1.size());
            
            cartaPrima = mano1[indice_carta];
            mano1.erase(mano1.begin() + indice_carta);

            int indice_cartabot = rand() % mano2.size();
            cartaSeconda = mano2[indice_cartabot];
            mano2.erase(mano2.begin() + indice_cartabot);
            cout << "Il bot risponde con: "; 
            stampaCarta(cartaSeconda, cartaCoppe, cartaBastoni, cartaSpade, cartaDenari); 
            cout << " che vale " << puntiDaValore(cartaSeconda.value) << " punti " << endl;
        } 
        else {
            int indice_cartabot = rand() % mano2.size();
            cartaPrima = mano2[indice_cartabot];
            mano2.erase(mano2.begin() + indice_cartabot);
            cout << "Il bot gioca: "; 
            stampaCarta(cartaPrima, cartaCoppe, cartaBastoni, cartaSpade, cartaDenari); 
            cout << " che vale " << puntiDaValore(cartaPrima.value) << " punti " << endl;

            int indice_carta;
            do {
                cout << "Scegli che carta giocare in risposta (indice): " << endl;
                cin >> indice_carta;
            } while (indice_carta < 0 || indice_carta >= (int)mano1.size());
            
            cartaSeconda = mano1[indice_carta];
            mano1.erase(mano1.begin() + indice_carta);
        }

        bool primabriscola = (cartaPrima.segno == BRISCOLA);
        bool secondabriscola = (cartaSeconda.segno == BRISCOLA);
        int puntiPrima = puntiDaValore(cartaPrima.value);
        int puntiSeconda = puntiDaValore(cartaSeconda.value);

        string vincitore;
        
        if (cartaPrima.segno == cartaSeconda.segno) {
            if (puntiSeconda > puntiPrima) {
                vincitore = primoagiocare ? "squadra2" : "squadra1";
            } else {
                vincitore = primo_giocatore;
            }
        } else {
            if (primabriscola && !secondabriscola) {
                vincitore = primo_giocatore;
            } else if (!primabriscola && secondabriscola) {
                if (puntiSeconda > puntiPrima) {
                    vincitore = primoagiocare ? "squadra2" : "squadra1";
                } else {
                    vincitore = primo_giocatore;
                }
            } else {
                vincitore = primo_giocatore;
            }
        }

        int puntiMano = puntiPrima + puntiSeconda;
        if (vincitore == "squadra2") {
            puntisq2 += puntiMano;
            cout << "La mano è vinta dalla SQUADRA 2 (BOT). Punti: " << puntiMano << endl;
        } else {
            puntisq1 += puntiMano;
            cout << "La mano è vinta dalla SQUADRA 1 (TU). Punti: " << puntiMano << endl;
        }

        if (!mazzo.empty()) {
            if (vincitore == "squadra1") {
                mano1.push_back(mazzo.back()); mazzo.pop_back();
                if (!mazzo.empty()) { mano2.push_back(mazzo.back()); mazzo.pop_back(); }
            } else {
                mano2.push_back(mazzo.back()); mazzo.pop_back();
                if (!mazzo.empty()) { mano1.push_back(mazzo.back()); mazzo.pop_back(); }
            }
        }

        primo_giocatore = vincitore;
        cout << "Punteggio attuale = Squadra1: " << puntisq1 << " e Squadra2: " << puntisq2 << endl;
    }

    cout << "Partita terminata. Punteggio finale = Squadra1: " << puntisq1 << " e Squadra2: " << puntisq2 << endl;
    return 0;
}

/*############################################################################################################*/
void stampaCarta(const mydata &c) {
    cout << c.value << " di " << c.segno;
}

int duecontroduefacile(){
 
 srand(time(NULL));
 
	setlocale(LC_ALL, "ita");
 	
 	int puntisq1 = 0; // Squadra 1: TU (0) + BOT COMPAGNO (2)
	int puntisq2 = 0; // Squadra 2: BOT NEMICO (1) + BOT NEMICO (3)
 	
    vector<mydata> mazzo = generaMazzo();
 
    // --- DISTRIBUZIONE INIZIALE ---
    vector<mydata> mano1, mano2, mano3, mano4; // Giocatori: 0=TU, 1=BOT_NEMICO, 2=BOT_COMPAGNO, 3=BOT_NEMICO
    for (int i = 0; i < 3; ++i) {
        mano1.push_back(mazzo.back()); mazzo.pop_back();
        mano2.push_back(mazzo.back()); mazzo.pop_back();
        mano3.push_back(mazzo.back()); mazzo.pop_back();
        mano4.push_back(mazzo.back()); mazzo.pop_back();
    }

    // --- DETERMINAZIONE BRISCOLA ---
    mydata cartaBriscola;
    if (!mazzo.empty()) {
        cartaBriscola = mazzo.back();
    }
    string BRISCOLA = cartaBriscola.segno;
    HANDLE hConsole = GetStdHandle(STD_OUTPUT_HANDLE);
    SetConsoleTextAttribute(hConsole, FOREGROUND_BLUE | FOREGROUND_INTENSITY);
    cout << "BRISCOLA: ";
    stampaCarta(cartaBriscola);
    cout <<endl;
    SetConsoleTextAttribute(hConsole, FOREGROUND_RED | FOREGROUND_GREEN | FOREGROUND_BLUE);

    int primoGiocatore = 0; // 0=TU, 1=BOT_NEMICO, 2=BOT_COMPAGNO, 3=BOT_NEMICO

    // --- CICLO PRINCIPALE DEL GIOCO ---
    while (!mano1.empty() && !mano2.empty() && !mano3.empty() && !mano4.empty()) {
    	SetConsoleTextAttribute(hConsole, FOREGROUND_RED | FOREGROUND_INTENSITY);
        cout << "\n--- Nuova mano ---\n";
        SetConsoleTextAttribute(hConsole, FOREGROUND_RED | FOREGROUND_GREEN | FOREGROUND_BLUE);
        
        vector<string> nomiGiocatori = {"TU", "BOT NEMICO 1", "BOT COMPAGNO", "BOT NEMICO 2"};
        cout << "Primo a giocare: "<< nomiGiocatori[primoGiocatore]<<endl;
		cout<< "la  BRISCOLA è ";
        stampaCarta(cartaBriscola);
        cout<<endl;
        SetConsoleTextAttribute(hConsole, FOREGROUND_RED | FOREGROUND_GREEN | FOREGROUND_BLUE);
        
        // MOSTRA LA MANO ALL'UTENTE
        cout << "La tua mano: \n";
        for (int i = 0; i < mano1.size(); ++i) {
            cout << i << " ) "; 
            stampaCarta(mano1[i]); 
            cout << " vale " << puntiDaValore(mano1[i].value) << " punti " << endl;
        } 

        // Ordine di gioco: sempre orario partendo da primoGiocatore
        vector<int> ordineGioco;
        for (int i = 0; i < 4; ++i) {
            ordineGioco.push_back((primoGiocatore + i) % 4);
        }

        // Carte giocate: indice = posizione nell'ordine di gioco
        vector<mydata> carteGiocate(4);
        vector<int> giocatoriIndici(4);

        // --- FASE DI GIOCATA ---
        for (int turno = 0; turno < 4; ++turno) {
            int idGiocatore = ordineGioco[turno];
            giocatoriIndici[turno] = idGiocatore;
            
            if (idGiocatore == 0) {
                // L'UTENTE GIOCA
                int indice_carta;
                do {
                    cout << "Scegli che carta giocare" <<endl; 
                    cin >> indice_carta;
                } while (indice_carta < 0 || indice_carta >= (int)mano1.size());
                
                carteGiocate[turno] = mano1[indice_carta];
                mano1.erase(mano1.begin() + indice_carta);
            } else if (idGiocatore == 1) {
                // BOT NEMICO 1
                int idx = rand() % mano2.size();
                carteGiocate[turno] = mano2[idx];
                mano2.erase(mano2.begin() + idx);
            } else if (idGiocatore == 2) {
                // BOT COMPAGNO
                int idx = rand() % mano3.size();
                carteGiocate[turno] = mano3[idx];
                mano3.erase(mano3.begin() + idx);
            } else if (idGiocatore == 3) {
                // BOT NEMICO 2
                int idx = rand() % mano4.size();
                carteGiocate[turno] = mano4[idx];
                mano4.erase(mano4.begin() + idx);
            }
            
            cout << nomiGiocatori[idGiocatore] << " gioca: ";
            stampaCarta(carteGiocate[turno]);
            cout << " (" << puntiDaValore(carteGiocate[turno].value) << " punti)" << endl;
        }

        // --- LOGICA VINCITORE MANO ---
        string semeAperto = carteGiocate[0].segno;
        int indiceVincitore = 0;
        int maxPunti = puntiDaValore(carteGiocate[0].value);
        bool c0Briscola = (carteGiocate[0].segno == BRISCOLA);

        // Verifica le altre carte
        for (int i = 1; i < 4; ++i) {
            int punti = puntiDaValore(carteGiocate[i].value);
            bool carteIBriscola = (carteGiocate[i].segno == BRISCOLA);

            // Se la carta è briscola e non lo era la precedente vincente, vince
            if (carteIBriscola && !c0Briscola) {
                c0Briscola = true;
                maxPunti = punti;
                indiceVincitore = i;
            }
            // Se sono entrambe briscola/stesso seme, vince quella con più punti
            else if ((carteIBriscola && c0Briscola) || 
                     (carteGiocate[i].segno == semeAperto && carteGiocate[indiceVincitore].segno == semeAperto)) {
                if (punti > maxPunti) {
                    maxPunti = punti;
                    indiceVincitore = i;
                }
            }
        }

        int vincitore = giocatoriIndici[indiceVincitore]; // Indice del giocatore che vince

        // --- AGGIORNAMENTO PUNTEGGI ---
        int puntiMano = 0;
        for (int i = 0; i < 4; ++i) {
            puntiMano += puntiDaValore(carteGiocate[i].value);
        }

        if (vincitore == 0 || vincitore == 2) {
            // Vince squadra 1
            puntisq1 += puntiMano;
            cout << "La mano è vinta da SQUADRA 1 (" << nomiGiocatori[vincitore] << "). Punti: " << puntiMano << endl;
        } else {
            // Vince squadra 2
            puntisq2 += puntiMano;
            cout << "La mano è vinta da SQUADRA 2 (" << nomiGiocatori[vincitore] << "). Punti: " << puntiMano << endl;
        }

        // --- PESCAGGIO NUOVE CARTE (ordine orario dal vincitore) ---
        if (!mazzo.empty()) {
            // Il vincitore pesca per primo, poi gli altri in ordine orario
            for (int i = 0; i < 4; ++i) {
                int giocatore = (vincitore + i) % 4;
                if (!mazzo.empty()) {
                    mydata carta = mazzo.back(); mazzo.pop_back();
                    if (giocatore == 0) mano1.push_back(carta);
                    else if (giocatore == 1) mano2.push_back(carta);
                    else if (giocatore == 2) mano3.push_back(carta);
                    else if (giocatore == 3) mano4.push_back(carta);
                }
            }
        }

        // Il vincitore della mano sarà il primo a giocare nel turno successivo
        primoGiocatore = vincitore;
        cout << "Punteggio attuale = Squadra 1: " << puntisq1 << " | Squadra 2: " << puntisq2 << endl;
    }

    // --- FINE PARTITA ---
    cout << "Partita terminata. Punteggio finale = Squadra 1: " << puntisq1 << " | Squadra 2: " << puntisq2 << endl;
    return 0;
}
//###########################################################################################################
int main(){

    SetConsoleOutputCP(CP_UTF8);

    // carta1 = COPPE
    string carta1 = u8R"(      .-------------------------.
      |   {NUM}                     |
      |            o            |
      |           / \           |
      |          /   \          |
      |         |     |         |
      |        /       \        |
      |     __/  (   )  \__     |
      |    |    (  *  )    |    |
      |    |_____(___)_____|    |
      |    |_______________|    |
      |    \               /    |
      |     \             /     |
      |      \           /      |
      |       \         /       |
      |       /         \       |
      |      /___________\      |
      |     o             o  {NUM}  |
      \_________________________/
)";

    // carta2 = BASTONI
    string carta2 = u8R"(      .-------------------------.
      |   {NUM}                     |
      |           ________      |
      |          /       /      |
      |     __  /       /__     |
      |     \ \ |       / /     |
      |      \ \|      / /      |
      |       \         |       |
      |        \        |       |
      |         |  (o)  |       |
      |      __ |       |       |
      |      \  \       |       |
      |       \  \      |__     |
      |        \        / /     |
      |         |        /      |
      |_________|       |_______|
      | ^   ^   |_______|  ^  ^ |
      |  ^   ^            ^  {NUM}  |
      \_________________________/
)";

    // carta3 = SPADE
    string carta3 = u8R"(      .-------------------------.
      |   {NUM}        ^            |
      |           / \           |
      |          /   \          |
      |         |     |         |
      |         |     |         |
      |         |     |         |
      |         | (#) |         |
      |         | / \ |         |
      |         | \ / |         |
      |       __|_____|__       |
      |     <|___________|>     |
      |          |   |          |
      |          |   |          |
      |          |   |          |
      |          |___|          |
      |            o            |
      |                     {NUM}   |
      \_________________________/
)";

    // carta4 = DENARI
    string carta4 = u8R"(      .-------------------------.
      | __{NUM}       ____       __ |
      |/  \     /   o \_    /  \|
      |    |    |     ___\  |   |
      |  __/   /     |       \  |
      | |     |       \       | |
      | \_____/   ___  \______/ |
      |          /   \          |
      |          |   |          |
      |          \___/          |
      |                         |
      |      /\         /\      |
      |     /  |       |  \     |
      |  /|/   |       |   \|\  |
      | /      |       |      \ |
      |        \_    _/         |
      |          \  /           |
      |        __/  \__     {NUM}   |
      \_________________________/
)";

    int scelta = 0;
    int modalita = 0;

    system("mode con: cols=120 lines=40");
    system("chcp 65001 > nul");

    do {
        system("CLS");
        HANDLE hConsole = GetStdHandle(STD_OUTPUT_HANDLE);

        SetConsoleTextAttribute(hConsole, FOREGROUND_RED | FOREGROUND_INTENSITY);
        cout << "                                  ____________________________________________________" << endl;
        cout << "                                 {                    Briscola                        }" << endl;                                                                                                                                               
        cout << "                                 {   Elia cortesi; Nicolo' Bedeschi; Gabriele Romano  }" << endl;
        cout << "                                 {____________________________________________________} "<< endl;
 
           SetConsoleTextAttribute(hConsole, FOREGROUND_GREEN | FOREGROUND_INTENSITY);
 cout << "-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_" << endl;
 cout << "    _                  ____  ______ _____  _____  _____  _____   _                          .-------.                   " << endl;
 cout << "   | |        /\\      |  _ \\|  __  \|_   _|/ ____|/ ____ / __  \\ | |          /\\             |67.--. |                   " << endl;
 cout << "   | |       /  \\     | |_) | |__) | | |  | (___ | |   | |  | | | |         /  \\            | (\\/)  |                  " << endl;
 cout << "   | |      / /\\ \\    |  _ <|  _  /  | |  |\___  \\| |     |  | | | |        / /\\ \\\           | :\\/:  |                   " << endl;
 cout << "   | |____ / ____ \\   | |_) | | \\ \\ _| |_ ____) || |___| |__| | | |____   / ____ \\\          | '--'67|                   " << endl;
 cout << "   |______/_/    \\_\\  |____/|_|  \\_\\_\_____|_____/\\_____|\\_____/ |______| /_/    \\_\\         `-------'                   " << endl;
 cout << "-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-      " << endl;
 
        cout << "\n" << endl;
        SetConsoleTextAttribute(hConsole, FOREGROUND_RED | FOREGROUND_GREEN | FOREGROUND_INTENSITY);
        cout << "\n1. Singolo ===> 1 vs 1" << endl;
        SetConsoleTextAttribute(hConsole, FOREGROUND_RED | FOREGROUND_INTENSITY);
        cout << "2. Doppio  ===> 2 vs 2" << endl;
        SetConsoleTextAttribute(hConsole, FOREGROUND_RED | FOREGROUND_GREEN | FOREGROUND_BLUE);
        cout << "3. Esci" << endl;
        
        cout << "\nINSERISCI LA MODALITA' DI GIOCO: ";
        cin >> modalita;

        switch (modalita) {
            case 1:
                cout << "Hai scelto l'Opzione 1, briscola 1 contro 1" << endl;
                SetConsoleTextAttribute(hConsole, FOREGROUND_GREEN | FOREGROUND_INTENSITY);
                cout << "\n1. FACILE" << endl;
                SetConsoleTextAttribute(hConsole, FOREGROUND_RED | FOREGROUND_INTENSITY);
                cout << "2. MEDIA" << endl;
                SetConsoleTextAttribute(hConsole, FOREGROUND_RED | FOREGROUND_GREEN | FOREGROUND_BLUE);
                cout << "\nSELEZIONA LA DIFFICOLTA: " << endl;
                cin >> scelta; 

                do {
                cout << "\nSELEZIONA LA DIFFICOLTA:\n";
                cout << " 1. FACILE "<<endl;
                cout << "2. MEDIA"<<endl;
                cout << "3. TORNA INDIETRO"<<endl;
                cin >> scelta;

                if (scelta == 1) {
        unocontrounofacile(carta1, carta2, carta3, carta4);
        system("pause");
    }
            else if (scelta == 2) {
        unocontrounomedio(carta1, carta2, carta3, carta4);
        system("pause");
    }

} while (scelta != 3);

            case 2:
                cout << "Hai scelto l'opzione 2, briscola 2 contro 2" << endl;
                generaMazzo();
                system("pause");
                break;

            case 3:
                cout << "Uscita..." << endl;
                break;

            case 67:
                cout << "Hai scoperto l'easter egg, sei un sigma diddy blud ohio 6767676767676767" << endl;
                generaMazzo();
                system("pause");
                break;

            default:
                cout << "Ma sei ritardato ? Scegli una di queste opzioni" << endl;
                system("pause");
        }

    } while (modalita != 4);

    return 0;
}
