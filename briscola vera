//-------------------------------------------------------------------------------------------------------------------------------------------------

int mazzo(){

	struct mydata {
    int valorecarta;
    string segno;
    //creazione di mydata
};

srand(time(NULL));
std::random_device rd;
    // Usiamo mt19937 come motore di generazione (consigliato)
std::mt19937 g(rd());


vector <mydata> mazzo;

for(int a=1; a<11; a++){
	mazzo.push_back({a," Denari"});
}
for(int b=1; b<11; b++){
	mazzo.push_back({b," Bastoni"});
}
for(int c=1; c<11; c++){
	mazzo.push_back({c," Spade"});
}
for(int d=1; d<11; d++){
	mazzo.push_back({d," Coppe"});
}
//riempimento vettore con le carte

shuffle( mazzo.begin(), mazzo.end(), g);

//shuffle del mazzo

for(int z=0; z<40;z++){
	cout<<mazzo[z].segno<< " "<<mazzo[z].valorecarta<<endl;
}
//stampa per controllare

//funzione mazzo di pesca
}
