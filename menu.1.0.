#include <cstdlib>
int main() {
    int scelta;

    do {
        system("CLS");
		HANDLE hConsole = GetStdHandle(STD_OUTPUT_HANDLE);
		// 1. Mostra il menu all'utente
        SetConsoleTextAttribute(hConsole, FOREGROUND_GREEN | FOREGROUND_INTENSITY);
    std::cout << "---| LA BRISCOLA |---" << std::endl;
		//std::cout << "---| LA BRISCOLA |---" << std::endl;
        SetConsoleTextAttribute(hConsole, FOREGROUND_RED | FOREGROUND_GREEN | FOREGROUND_BLUE);
		std::cout << "1. Opzione 1" << std::endl;
        std::cout << "2. Opzione 2" << std::endl;
        std::cout << "3. Esci" << std::endl;
        std::cout << "IINSERISCI LA MODALITA' DI GIOCO': ";
        std::cin >> scelta;

        // 2. Gestisci la scelta dell'utente usando uno switch
        switch (scelta) {
            case 1:
                std::cout << "Hai scelto l'Opzione 1." << std::endl;
                // Inserisci il codice per l'Opzione 1 qui
                break;
            case 2:
                std::cout << "Hai scelto l'Opzione 2." << std::endl;
                // Inserisci il codice per l'Opzione 2 qui
                break;
            case 3:
                std::cout << "Uscita dal programma." << std::endl;
                break;
            default:
                std::cout << "MODALITA' DI GIOCO NON ESISTENTE. Riprova." << std::endl;
        }
    } while (scelta != 3); // Continua finchÃ© l'utente non sceglie di uscire

    return 0;
}
