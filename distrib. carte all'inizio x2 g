void distribuisci_carte1v1(vector<mydata>mazzo, vector<mydata>manog1, vector<mydata>manog2, int num_giocatori, int carte_mano=3) {

 for (int i = 0; i < carte_mano; ++i) {
        // Iteriamo per ogni giocatore (2)
        for (int j = 0; j < 2; ++j) {
            
            // A. Prendiamo la prima carta dal mazzo (che è già mescolato)
            // Utilizziamo mazzo_principale.front() per accedere all'elemento.
            mydata carta_pescata = mazzo.front();

            // B. Mettiamo la carta nella mano del giocatore corrente
            mani_giocatori[j].push_back(carta_pescata);

            // C. Rimuoviamo la carta dal mazzo principale
            // Usiamo .begin() per ottenere un iteratore al primo elemento e lo cancelliamo.
            mazzo_principale.erase(mazzo_principale.begin());
            
            // Il mazzo ora ha una dimensione inferiore di 1.
        }}
