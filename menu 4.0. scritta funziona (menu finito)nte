#include <iostream>
#include <windows.h>
#include <cstdlib>
#include <stdio.h>
#include <stdlib.h>
int main() {
    int scelta, show_license;
system("mode con: cols=120 lines=40");
       system("chcp 65001 > nul");
    do {
       
		system("CLS");
		HANDLE hConsole = GetStdHandle(STD_OUTPUT_HANDLE);
		// 1. Mostra il menu all'utente
        SetConsoleTextAttribute(hConsole, FOREGROUND_RED | FOREGROUND_INTENSITY);
 
 std::cout << "                                  ____________________________________________________" << std::endl;
 std::cout << "                                 {                    Briscola                        }" << std::endl;                                                                                                                                               
 std::cout << "                                 {   Elia cortesi; Nicolò Bedeschi; Gabriele Romano    }" << std::endl;
 std::cout << "                                 {____________________________________________________} "<< std::endl;
 
     SetConsoleTextAttribute(hConsole, FOREGROUND_GREEN | FOREGROUND_INTENSITY);
 std::cout << "-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_" << std::endl;
 std::cout << "    _                  ____  ______ _____  _____  _____  _____   _                          .------.                   " << std::endl;
 std::cout << "   | |        /\\      |  _ \\|  __  \|_   _|/ ____|/ ____ / __  \\ | |          /\\             |?.--. |                   " << std::endl;
 std::cout << "   | |       /  \\     | |_) | |__) | | |  | (___ | |   | |  | | | |         /  \\            | (\\/) |                  " << std::endl;
 std::cout << "   | |      / /\\ \\    |  _ <|  _  /  | |  |\___  \\| |     |  | | | |        / /\\ \\\           | :\\/: |                   " << std::endl;
 std::cout << "   | |____ / ____ \\   | |_) | | \\ \\ _| |_ ____) || |___| |__| | | |____   / ____ \\\          | '--'?|                   " << std::endl;
 std::cout << "   |______/_/    \\_\\  |____/|_|  \\_\\_\_____|_____/\\_____|\\_____/ |______| /_/    \\_\\         `------'                   " << std::endl;
 std::cout << "-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-      " << std::endl;
	
	
		//std::cout << "---| LA BRISCOLA |---" << std::endl;
std::cout << "                                                                                                                         " << std::endl;
std::cout << "                                                                                                                         " << std::endl;
		SetConsoleTextAttribute(hConsole, FOREGROUND_RED | FOREGROUND_GREEN | FOREGROUND_INTENSITY);
		std::cout << "1. Singolo ===>  1 vs 1" << std::endl;
        SetConsoleTextAttribute(hConsole, FOREGROUND_RED | FOREGROUND_INTENSITY);
		std::cout << "2. Doppio  ===>  2 vs 2" << std::endl;
        SetConsoleTextAttribute(hConsole, FOREGROUND_GREEN | FOREGROUND_INTENSITY);
		std::cout << "3. Cinque  ===>  2 vs 3 ===> (Il primo che gioca la briscola va nel gruppo da 2)" << std::endl;
		SetConsoleTextAttribute(hConsole, FOREGROUND_RED | FOREGROUND_GREEN | FOREGROUND_BLUE);
		std::cout << "4. Esci" << std::endl;
        SetConsoleTextAttribute(hConsole, FOREGROUND_BLUE | FOREGROUND_INTENSITY);
std::cout << "                                                                                                                         " << std::endl;		
		std::cout << "IINSERISCI LA MODALITA' DI GIOCO': ";
        std::cin >> scelta;

        // 2. Gestisci la scelta dell'utente usando uno switch
        switch (scelta) {
            case 1:
                std::cout << "Hai scelto l'Opzione 1." << std::endl;
                // Inserisci il codice per l'Opzione 1 qui
                break;
            case 2:
                std::cout << "Hai scelto l'Opzione 2." << std::endl;
                // Inserisci il codice per l'Opzione 2 qui
                break;
            case 3:
                std::cout << "Hai scelto l'Opzione 3." << std::endl;
                break;
			case 4:
            	std::cout << "Uscita dal programma" << std::endl;
                break;
			default:
                
				std::cout << "MODALITA' DI GIOCO NON ESISTENTE. Riprova." << std::endl;
        }
    } while (scelta != 3); // Continua finché l'utente non sceglie di uscire

    return 0;
}
